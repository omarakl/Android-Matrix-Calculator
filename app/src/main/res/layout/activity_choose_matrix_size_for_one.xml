<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_matrix_size_for_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".choose_matrix_size_for_one">

    <Button
        android:id="@+id/twoBytwoButton"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:text="2 x 2"
        android:textSize="20sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/threeBythreeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <Button
        android:id="@+id/threeBythreeButton"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:text="3 x 3"
        android:textSize="20sp"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/fourByfourButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twoBytwoButton" />

    <Button
        android:id="@+id/fourByfourButton"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:text="4 x 4"
        android:textSize="20sp"
        app:backgroundTint="#040303"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/threeBythreeButton" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="352dp"
        android:layout_height="167dp"
        app:layout_constraintBottom_toTopOf="@+id/twoBytwoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aa" />
</androidx.constraintlayout.widget.ConstraintLayout>
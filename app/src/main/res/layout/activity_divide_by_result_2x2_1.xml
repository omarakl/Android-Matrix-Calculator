<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".divideBy_result_2x2_1">

    <EditText
        android:id="@+id/xz4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_borders"
        android:editable="false"
        android:ems="10"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#EF4646"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/xz3"
        app:layout_constraintTop_toBottomOf="@+id/xz2" />

    <EditText
        android:id="@+id/xz3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_borders"
        android:editable="false"
        android:ems="10"
        android:inputType="numberSigned"
        android:textColor="#EF4646"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/xz4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xz1" />

    <EditText
        android:id="@+id/xz2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_borders"
        android:editable="false"
        android:ems="10"
        android:inputType="numberSigned"
        android:textColor="#EF4646"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/xz4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/xz1"
        app:layout_constraintTop_toBottomOf="@+id/imageView25" />

    <EditText
        android:id="@+id/xz1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_borders"
        android:editable="false"
        android:ems="10"
        android:inputType="numberSigned"
        android:textColor="#EF4646"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/xz3"
        app:layout_constraintEnd_toStartOf="@+id/xz2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView25" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="365dp"
        android:layout_height="184dp"
        app:layout_constraintBottom_toTopOf="@+id/xz2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/result" />
</androidx.constraintlayout.widget.ConstraintLayout>